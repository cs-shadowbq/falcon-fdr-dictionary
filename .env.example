# CrowdStrike API Configuration
# Copy this file to .env and fill in your credentials
# =============================================================================

# REQUIRED: CrowdStrike API Credentials
# =============================================================================

# Your CrowdStrike API Client ID (requires FDR API read scope)
FALCON_CLIENT_ID=your_client_id_here

# Your CrowdStrike API Client Secret
FALCON_CLIENT_SECRET=your_client_secret_here

# CrowdStrike Cloud Region (auto, us1, us2, eu1, usgov1, usgov2)
# Default: auto (automatic region detection)
FALCON_CLIENT_CLOUD=auto

# =============================================================================
# OPTIONAL: Output Configuration
# =============================================================================

# Directory where output files will be saved (default: ./docs)
OUTPUT_DIR=./docs

# Default filename for generated FDR event dictionary (default: fdr-event-dictionary.json)
DEFAULT_OUTPUT_FILE=fdr-event-dictionary.json

# =============================================================================
# OPTIONAL: Tag Configuration
# =============================================================================

# Custom tag files to load (comma-separated paths)
# If not specified, uses built-in default_tags.yaml
# Example: TAG_FILES=/path/to/custom_tags.yaml,/path/to/more_tags.yaml
# TAG_FILES=

# =============================================================================
# OPTIONAL: Logging Configuration
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: INFO
LOG_LEVEL=INFO

# Log file path (default: falcon_fdr_dictionary.log)
LOG_FILE=falcon_fdr_dictionary.log

# =============================================================================
# OPTIONAL: Display Settings
# =============================================================================

# Show ASCII banner on startup (true/false)
# Default: true
SHOW_BANNER=true
